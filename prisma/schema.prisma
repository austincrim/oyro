// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  email String @id
  password String
  items PlaidItem[]
  sessions Session[]
  createdAt DateTime @default(now())
}

model Session {
  id String @id @default(uuid())
  user User @relation(fields: [email], references: [email])
  email String
  createdAt DateTime @default(now())
  expiresAt BigInt?
}

model PlaidItem {
  itemId String @id
  accessToken String
  user User @relation(fields: [email], references: [email])
  email String
  createdAt DateTime @default(now())
}